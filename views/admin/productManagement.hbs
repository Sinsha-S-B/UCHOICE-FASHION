<title>Products</title>
</head>

<body>
	{{>adminHeader}}
	

	<div class="p-5">
		
		<table class="table mt-5">

			<thead class="thead-dark">
				<tr>
					<th scope="col">Sl.No</th>
					<th scope="col">Name</th>
					<th scope="col">Price</th>
					<th scope="col">Discount Price</th>
					<th scope="col">Discount Percentage</th>
					<th scope="col">Action</th>
					
				</tr>
			</thead>
			<tbody>
				{{#each offer options="{data: {startIndex: 1}}" }}
				 <tr>
					<td>{{incIndex @index}}</td>
					<td>{{title}}</td>
					<td>{{price}}</td>
					<td>{{discountPrice}}</td>
					<td>{{discount}}</td>
					<td><a class="btn btn-dark" onclick="return confirm('Are you sure you want to edit')"
							href="/admin/editProOffer/{{_id}}">Edit</a></td>
					{{!-- <td><a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete')"
							href="/admin/delete/{{_id}}">Delete</a></td> --}}

				</tr>
				{{/each}} 
			</tbody>
		</table>
	</div>
	{{>adminFooter}}



