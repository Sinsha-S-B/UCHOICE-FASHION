{{>adminHeader}}
<br><br>

<div class="p-5 container">

    <table class="table mt-5">


        <thead class="thead-dark">
            <tr>
                <th scope="col">Sl.No</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total Amount</th>
                <th>
                    <div class="dropdown">
                        <a class="btn btn-dark btn-sm dropdown-toggle" href="#" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            change status
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <form action="/admin/shipping/{{orderId}}" method="post">
                                <input type="text" name="value" value="shipped" hidden>
                                <button type="submit" class="dropdown-item">shipping</button>
                            </form>
                            <form action="/admin/deliverd/{{orderId}}" method="post">
                                <input type="text" name="value" value="Deliverd" hidden>
                                <button type="submit" class="dropdown-item">delivered</button>
                            </form>
                            <form action="/admin/cancelled/{{orderId}}" method="post">
                                <input type="text" name="value" value="Cancelled" hidden>
                                <button type="submit" class="dropdown-item">Cancel</button>
                            </form>
                            <form action="/admin/returnconfirm/{{orderId}}" method="post">
                                <input type="text" name="value" value="Returned" hidden>
                                <button type="submit" class="dropdown-item">Return Confirmed</button>
                            </form>
                        </div>
                    </div>
                </th>
            </tr>
        </thead>

        <tbody>
            {{#each orderItems}}
            <tr>
                <td>{{incIndex @index}}</td>
                <td><img src="/images/productImages/{{product.image.[0]}}.jpg" alt="" width="70px"></td>
                <td>{{product.title}}</td>
                <td>{{quantity}}</td>
                <td>{{product.price}}</td>
                <td>{{../statuspass}}</td>
            </tr>
            {{/each}}
        </tbody>

    </table>
</div>


